<p id="notice"><%= notice %></p>

<h1>Productos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Stock act</th>
      <th>Stock min</th>
      <th>Precio compra</th>
      <th>Precio venta</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @productos.each do |producto| %>
      <tr>
        <td><%= producto.nombre %></td>
        <td><%= producto.stock_act %></td>
        <td><%= producto.stock_min %></td>
        <td><%= producto.precio_compra %></td>
        <td><%= producto.precio_venta %></td>
        <td><%= link_to 'Mostrar', producto,class:"btn btn-success"  %></td>
        <td><%= link_to 'Editar', edit_producto_path(producto),class:"btn btn-info" %></td>
        <td><%= link_to 'Eliminar', producto, method: :delete, data: { confirm: 'Estas seguro?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>





