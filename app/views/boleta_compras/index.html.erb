<p id="notice"><%= notice %></p>

<h1>Boleta Compras</h1>

<table>
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Monto</th>
      <th>Tipo pago</th>
      <th>Cantidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boleta_compras.each do |boleta_compra| %>
      <tr>
        <td><%= boleta_compra.fecha %></td>
        <td><%= boleta_compra.monto %></td>
        <td><%= boleta_compra.tipo_pago %></td>
        <td><%= boleta_compra.cantidad %></td>
        <td><%= link_to 'Show', boleta_compra %></td>
        <td><%= link_to 'Edit', edit_boleta_compra_path(boleta_compra) %></td>
        <td><%= link_to 'Destroy', boleta_compra, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

